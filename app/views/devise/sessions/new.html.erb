<div class="text-center">
  <h2>登录</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),
             :html => {:class => "form-horizontal", :role => "form" }) do |f| %>
  <div class="form-group">
    <%= f.label :email, :class => "control-label col-sm-1 col-sm-offset-3" %>
    <div class="col-sm-5">
      <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => '电子邮箱', :required => true  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => "control-label col-sm-1 col-sm-offset-3" %>
    <div class="col-sm-5">
      <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => '密码', :required => true  %>
    </div>
  </div>

  <div class="form-group">
    <div class="checkbox col-sm-2 col-sm-offset-4">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      <% end -%>
    </div>
    <div class="col-sm-2 col-sm-offset-1">
      <%= f.submit :class => "form-control" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
