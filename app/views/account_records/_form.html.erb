<%= form_for(@account_record) do |f| %>
  <% if @account_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account_record.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @account_record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :amounts %><br>
    <%= f.text_field :amounts %>
  </div>
  <div class="field">
    <%= f.radio_button :incoming_or_outgoing, 1, :checked => true %>
    <%= f.label :incoming_or_outgoing, I18n.t(:incoming), :value => 'incoming' %>
    <%= f.radio_button :incoming_or_outgoing, -1 %>
    <%= f.label :incoming_or_outgoing, I18n.t(:outgoing), :value => 'outgoing' %>
  </div>
  <div class="field">
    <%= f.label :record_type %><br>
    <%= f.text_field :record_type %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
