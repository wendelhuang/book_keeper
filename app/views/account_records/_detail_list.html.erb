<% if !account_records.nil? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>合计</th>
        <th></th>
        <th><%= aggregate(account_records) %></th>
      </tr>
    </thead>
    <tbody>
    <% account_records.each do |account_record| -%>
      <%= render :partial => 'entry', :locals => {:entry => account_record} %>  
    <% end %>
    </tbody>
  </table>
<% end %>
